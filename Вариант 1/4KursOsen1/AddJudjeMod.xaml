<Window x:Class="_4KursOsen1.AddJudjeMod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4KursOsen1"
        mc:Ignorable="d"
        Title="Добавление жюри/модератора"
        MaxHeight="600" MaxWidth="1000"
        Height="450" Width="800"
        MinHeight="400" MinWidth="750"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Height" Value="25"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="ID:"/>
            <TextBlock Text="ФИО:"/>
            <TextBlock Text="Дата рождения:"/>
            <TextBlock Text="Пол:"/>
            <TextBlock Text="Роль:"/>
            <TextBlock Text="Email:"/>
            <TextBlock Text="Телефон:"/>
            <TextBlock Text="Направление:"/>
            <TextBlock Text="Мероприятие:"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="10" Grid.Column="1">
            <TextBox Name="idTextBox" IsEnabled="False" Background="LightGray"/>
            <TextBox Name="fullNameTextBox" ToolTip="Введите ФИО"/>
            <DatePicker Name="dateOfBirthPicker" Width="150" />
            <ComboBox Name="sexComboBox"/>
            <ComboBox Name="roleComboBox">
                <ComboBoxItem Content="модератор"/>
                <ComboBoxItem Content="жюри"/>
            </ComboBox>
            <TextBox Name="emailTextBox" ToolTip="Введите email"/>
            <TextBox Name="phoneTextBox" ToolTip="Формат: +7(999)-099-90-90"
                     GotFocus="PhoneTextBox_GotFocus" LostFocus="PhoneTextBox_LostFocus"
                     PreviewTextInput="PhoneTextBox_PreviewTextInput"/>

            <StackPanel Orientation="Horizontal">
                <ComboBox Name="sectionComboBox" Width="100"/>
                <CheckBox Name="newSectionCheckBox" Content="Новое" VerticalAlignment="Center"
                         Checked="NewSectionCheckBox_Checked" Unchecked="NewSectionCheckBox_Unchecked"/>
            </StackPanel>
            <TextBox Name="newSectionTextBox" Visibility="Collapsed" ToolTip="Введите новое направление"/>

            <CheckBox Content="Прикрепить к мероприятию" Name="linkCheckBox"
                     Checked="LinkCheckBox_Checked" Unchecked="LinkCheckBox_Unchecked"/>
            <ComboBox Name="eventComboBox" IsEnabled="False"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,90"/>

        <Grid Grid.Column="3" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Фото пользователя -->
            <Border Grid.Row="0" Grid.ColumnSpan="3" BorderBrush="Gray" BorderThickness="1" 
            Background="LightGray" HorizontalAlignment="Center">
                <Grid Width="150" Height="200">
                    <Button Name="userFotoButton" Content="Добавить фото" 
                    Click="UserFotoButton_Click"
                    Background="Transparent" 
                    BorderBrush="Transparent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                    <Image Name="userImage" Stretch="Uniform" Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Пароль -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Пароль:" 
               VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <PasswordBox Grid.Row="2" Grid.Column="2" Name="passwordBox" 
                 PasswordChanged="PasswordBox_PasswordChanged"
                 VerticalAlignment="Center"/>

            <!-- Сообщения об ошибках пароля -->
            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" 
               Name="passwordErrorText" Style="{StaticResource ErrorTextStyle}" 
               TextWrapping="Wrap" HorizontalAlignment="Center"/>

            <!-- Повтор пароля -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Повтор пароля:" 
               VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <PasswordBox Grid.Row="4" Grid.Column="2" Name="passwordBoxCheck" 
                 PasswordChanged="PasswordBoxCheck_PasswordChanged"
                 VerticalAlignment="Center"/>

            <!-- Сообщение о совпадении паролей -->
            <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" 
               Name="passwordMatchText" Style="{StaticResource ErrorTextStyle}" 
               HorizontalAlignment="Center"/>

            <!-- Чекбокс видимого пароля -->
            <CheckBox Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" 
              Name="showPasswordCheckBox" Content="Видимый пароль" 
              Checked="ShowPasswordCheckBox_Checked" 
              Unchecked="ShowPasswordCheckBox_Unchecked"
              HorizontalAlignment="Center"/>

            <!-- Кнопки -->
            <StackPanel Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="3" 
                Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Click="AddButton_Click" Width="80" Height="25" Margin="5"/>
                <Button Content="Отмена" Click="CancelButton_Click" Width="80" Height="25" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>