<Window x:Class="_4KursOsen1.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4KursOsen1"
        mc:Ignorable="d"
        Title="Авторизация"
        MaxHeight="600" MaxWidth="1000"
Height="450" Width="800"
MinHeight="400" MinWidth="750"
WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" Width="300" Height="400">
            <TextBlock Text="Авторизация" FontSize="30" HorizontalAlignment="Center"/>
            <TextBox Height="20" Margin="5" Name ="idTextBox" />
            <PasswordBox Height="20"  Margin="5" Name="passwordBox"/>
            <Border BorderBrush="Black" Height="100" Width="250">
                <Canvas Height="100" Width="250" x:Name="captchaCanvas"/>
            </Border>
            <TextBox  Height="20" Margin="5" x:Name="captchaTextBox"/>
            <Button Height="30" Margin="5" Content="Обновить каптчу" Click="RefreshCaprchaButton_Click"/>
            <Button Height="30" Margin="5" Content="Войти" Click="AuthButton_Click"/>
            <Button Content="Войти как гость"  Height="30" Margin="5" Click="toMainWindowButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
