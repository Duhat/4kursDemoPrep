<UserControl x:Class="_4KursOsen1.EventCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_4KursOsen1"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="500">
    <UserControl.Resources>

        
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </UserControl.Resources>
    <Border Width="500" Height="150" >
        <StackPanel Orientation="Horizontal">
             <Viewbox Width="120" Height="100">
            <Image Source="/logo/1.jpeg" Stretch="Uniform"/>
        </Viewbox>

        <StackPanel Orientation="Vertical"  Height="120">
            <TextBlock Text="Название" x:Name="eventNameTextBlock"/>
            <TextBlock Text="Направление" x:Name="sectionNameTextBlock"/>
            <TextBlock Text="Дата" x:Name="dateTextBlock"/>
            
        </StackPanel>
        </StackPanel>

       
    
    </Border>
    
</UserControl>
