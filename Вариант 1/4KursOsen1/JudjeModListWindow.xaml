<Window x:Class="_4KursOsen1.JudjeModListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4KursOsen1"
        mc:Ignorable="d"
        Title="JudjeModListWindow"
        MaxHeight="600" MaxWidth="1000"
Height="450" Width="800"
MinHeight="400" MinWidth="750"
WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
            <DataGrid x:Name="modsJudjsDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding User_ID}" Width="*"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding Full_Name}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить" Grid.Row="1" Margin="10" Click="toAddButton_Click"/>
        
        
    </Grid>
</Window>
