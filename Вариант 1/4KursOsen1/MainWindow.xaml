<Window x:Class="_4KursOsen1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4KursOsen1"
        mc:Ignorable="d"
        Title="Мероприятия" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="150"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Список мероприятий" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Панель фильтров -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" 
                Background="WhiteSmoke" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <!-- Фильтр по дате -->
                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                    <TextBlock Text="Дата с:" Margin="2"/>
                    <DatePicker Name="dateFromPicker" SelectedDateChanged="FilterChanged"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                    <TextBlock Text="Дата по:" Margin="2"/>
                    <DatePicker Name="dateToPicker" SelectedDateChanged="FilterChanged"/>
                </StackPanel>

                <!-- Фильтр по направлению -->
                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                    <TextBlock Text="Направление:" Margin="2"/>
                    <ComboBox Name="sectionComboBox" 
                              SelectionChanged="FilterChanged"
                              DisplayMemberPath="Name"/>
                </StackPanel>

                <!-- Кнопка сброса -->
                <Button Content="Сбросить" Click="ResetFilters_Click" 
                        VerticalAlignment="Bottom" Margin="20,0,0,0"/>

            </StackPanel>
        </Border>

        <!-- Контейнер для карточек мероприятий -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="eventsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center"
                                   Margin="10"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:EventCard Margin="10,5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Кнопка авторизации -->
        <Button Grid.Row="3" Content="Авторизация" 
                Click="AuthButton_Click" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,0" Width="100"/>
    </Grid>
</Window>